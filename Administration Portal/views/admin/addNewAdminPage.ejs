<%- include('../header')%>

    <div class="glass-container glass rounded-[2.5rem] p-8 content-anim">
        <h2 class="text-3xl font-black mb-8 text-center tracking-tighter text-white">
            ADD <span class="text-blue-500">NEW ADMIN</span>
        </h2>

        <form action="/addAdmin" method="POST" class="grid grid-cols-1 md:grid-cols-2 gap-8"
            enctype="multipart/form-data">

            <div class="space-y-5">
                <div class="flex flex-col">
                    <label class="text-xs font-bold uppercase tracking-widest text-blue-400 mb-2 ml-1">First
                        Name</label>
                    <input type="text" name="fname" placeholder="Enter first name" required
                        class="bg-white/5 border border-white/10 p-4 rounded-2xl outline-none focus:border-blue-500 focus:bg-white/10 transition-all text-sm">
                </div>

                <div class="flex flex-col">
                    <label class="text-xs font-bold uppercase tracking-widest text-blue-400 mb-2 ml-1">Last
                        Name</label>
                    <input type="text" name="lname" placeholder="Enter last name" required
                        class="bg-white/5 border border-white/10 p-4 rounded-2xl outline-none focus:border-blue-500 focus:bg-white/10 transition-all text-sm">
                </div>

                <div class="flex flex-col">
                    <label class="text-xs font-bold uppercase tracking-widest text-blue-400 mb-2 ml-1">Email</label>
                    <input type="text" name="email" placeholder="Enter your email" required
                        class="bg-white/5 border border-white/10 p-4 rounded-2xl outline-none focus:border-blue-500 focus:bg-white/10 transition-all text-sm">
                </div>

                <div class="flex flex-col">
                    <label class="text-xs font-bold uppercase tracking-widest text-blue-400 mb-2 ml-1">Secure
                        Password</label>
                    <input type="password" name="password" placeholder="••••••••" required
                        class="bg-white/5 border border-white/10 p-4 rounded-2xl outline-none focus:border-green-500 focus:bg-white/10 transition-all text-sm">
                </div>

                <div class="flex flex-col">
                    <label class="text-xs font-bold uppercase tracking-widest text-blue-400 mb-2 ml-1">Contact
                        Phone</label>
                    <input type="text" name="phone" placeholder="+91 XXXX" required
                        class="bg-white/5 border border-white/10 p-4 rounded-2xl outline-none focus:border-blue-500 focus:bg-white/10 transition-all text-sm">
                </div>
            </div>

            <div class="space-y-6">
                <div
                    class="flex flex-col items-center justify-center p-6 bg-white/5 rounded-[2rem] border border-white/5">
                    <label class="text-xs font-bold uppercase tracking-widest text-blue-400 mb-4">Admin
                        Avatar</label>
                    <div id="drop-zone"
                        class="w-28 h-28 rounded-full border-2 border-dashed border-blue-500/30 glass flex items-center justify-center cursor-pointer overflow-hidden relative group hover:border-blue-500 transition-all">
                        <div id="upload-placeholder" class="text-center">
                            <i
                                class="fas fa-camera text-2xl text-gray-500 group-hover:text-blue-500 transition-colors"></i>
                        </div>
                        <img id="image-preview" src="#" class="hidden w-full h-full object-cover">
                        <input type="file" id="file-input" name="profileImage" class="hidden">
                    </div>
                </div>

                <div class="flex flex-col space-y-3">
                    <label class="text-xs font-bold uppercase tracking-widest text-blue-400 ml-1">Gender</label>
                    <div class="flex gap-3">
                        <label class="flex-1 cursor-pointer">
                            <input type="radio" name="gender" value="male" class="hidden peer">
                            <div
                                class="glass p-3 rounded-2xl text-center peer-checked:bg-blue-600/20 peer-checked:border-blue-500 transition-all text-sm font-medium">
                                Male</div>
                        </label>
                        <label class="flex-1 cursor-pointer">
                            <input type="radio" name="gender" value="female" class="hidden peer">
                            <div
                                class="glass p-3 rounded-2xl text-center peer-checked:bg-purple-600/20 peer-checked:border-purple-500 transition-all text-sm font-medium">
                                Female</div>
                        </label>
                    </div>
                </div>
            </div>

            <div class="md:col-span-2 space-y-6 mt-2">
                <div class="flex flex-col">
                    <label class="text-xs font-bold uppercase tracking-widest text-blue-400 mb-2 ml-1">City</label>
                    <input type="text" name="city" placeholder="Write your city here" required
                        class="bg-white/5 border border-white/10 p-4 rounded-2xl outline-none focus:border-blue-500 focus:bg-white/10 transition-all text-sm">
                </div>

                <div class="flex flex-col">
                    <div class="flex justify-between px-1 mb-2">
                        <label class="text-xs font-bold uppercase tracking-widest text-blue-400">Admin
                            Biography</label>
                        <span id="char-count" class="text-[10px] font-mono text-gray-500">0 / 500</span>
                    </div>
                    <textarea id="admin-about" name="about" rows="4" placeholder="Brief about the admin's role..."
                        class="bg-white/5 border border-white/10 rounded-[1.5rem] p-5 outline-none focus:border-blue-500/50 focus:bg-white/10 transition-all resize-none text-sm leading-relaxed"></textarea>
                </div>

                <button type="submit"
                    class="w-full bg-blue-600 hover:bg-blue-500 text-white font-black py-5 rounded-2xl shadow-2xl shadow-blue-500/30 transition-all active:scale-[0.98] uppercase tracking-[0.2em] text-sm mt-4">
                    Initialize Admin Account
                </button>
            </div>
        </form>
    </div>

    <%- include('../footer')%>