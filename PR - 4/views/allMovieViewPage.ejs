<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MovieHub</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- main css  -->
    <link rel="stylesheet" href="../public/style.css" type="text/css">
</head>

<body>

    <!-- HEADER -->
    <header>
        <section class="navigation-bar position-absolute top-0 start-0 z-3 w-100">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between py-4">
                    <h2>ðŸŽ¬ MovieHub</h2>
                    <nav>
                        <ul class="d-flex mb-0 ps-0 list-unstyled">
                            <li>
                                <a href="/" class="mx-2 px-4 py-2">Home</a>
                            </li>
                            <li>
                                <a href="/addMovie" class="mx-2 px-4 py-2">Add Movie</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </section>
    </header>

    <main>
        <!-- MOVIES -->
        <section class="movie py-5">
            <div class="container py-5">
                <div class="row g-4">
                    <% if(movies.length==0) {%>
                        <div class="py-5 d-flex justify-content-center align-items-center flex-column">
                            <h3 class="text-center">No Movies Are Available ðŸ˜“</h3>
                            <a href="/addMovie"><button class="btn btn-danger btn-lg mt-5">Add Some Movies To
                                    Watch</button></a>
                        </div>
                        <% } else{ %>
                            <div class="mb-5">
                                <h3 class="text-center">All Movies ðŸ˜€</h3>
                            </div>
                            <%} %>
                                <% movies.forEach(movie=> { %>
                                    <div class="col-6">
                                        <div class="row">
                                            <div class="col-5">
                                                <div class="movie_image position-relative">
                                                    <img src="<%= movie.movie_image %>" alt="" width="270px"
                                                        height="420px">
                                                    <div
                                                        class="position-absolute top-50 start-50 translate-middle bg-dark z-3">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-7">
                                                <div
                                                    class="px-2 movie_content d-flex align-items-start justify-content-center flex-column h-100 w-100">
                                                    <h2>
                                                        <%= movie.movie_name %>
                                                    </h2>
                                                    <p class="mb-2">
                                                        <%=movie.movie_desc %>
                                                    </p>
                                                    <p class="mb-2">
                                                        <b>Director</b> - <%= movie.movie_director %>
                                                    </p>
                                                    <p class="mb-2">
                                                        <b>Writer</b> - <%= movie.movie_writer %>
                                                    </p>
                                                    <p class="mb-2">
                                                        <b>Stars</b> - <%= movie.movie_stars %>
                                                    </p>
                                                    <p class="mb-2">
                                                        <b>Language</b> - <%= movie.movie_lang %>
                                                    </p>
                                                    <p class="mb-2">
                                                        <b>Type</b> - <%= movie.movie_type %>
                                                    </p>
                                                    <div class="my-3 action_button position-relative">
                                                        <a href="/editMovie/<%= movie.id %>"
                                                            class="px-4 py-2 rounded-4 mx-1 edit">Edit</a>
                                                        <a href="/deleteMovie/<%= movie.id %>"
                                                            class="px-4 py-2 rounded-4 mx-1 delete">Delete</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                </div>
            </div>
        </section>
    </main>

    <!-- FOOTER -->
    <footer class="text-center py-4">
        <p class="mb-0 text-secondary">Â© 2025 MovieHub | All Rights Reserved</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>