<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MovieHub</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- main css  -->
    <link rel="stylesheet" href="../public/style.css" type="text/css">
</head>

<body>

    <!-- HEADER -->
    <header>
        <section class="navigation-bar position-absolute top-0 start-0 z-3 w-100">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between py-4">
                    <h2>ðŸŽ¬ MovieHub</h2>
                    <nav>
                        <ul class="d-flex mb-0 ps-0 list-unstyled">
                            <li>
                                <a href="/" class="mx-2 px-4 py-2">Home</a>
                            </li>
                            <li>
                                <a href="/addMovie" class="mx-2 px-4 py-2">Add Movie</a>
                            </li>
                            <li>
                                <a href="/viewAllMoviePage" class="mx-2 px-4 py-2">View All Movie</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </section>
    </header>

    <main>
        <!-- MOVIES -->
        <section class="movie py-5">
            <div class="container py-5">
                <div class="row g-4">
                    <% if(movies.length==0) {%>
                        <div class="py-5 d-flex justify-content-center align-items-center flex-column">
                            <h3 class="text-center">No Movies Are Available ðŸ˜“</h3>
                            <a href="/addMovie"><button class="btn btn-danger btn-lg mt-5">Add Some Movies To
                                    Watch</button></a>
                        </div>
                        <% } else{ %>
                            <div>
                                <h3 class="text-center">All Movies ðŸ˜€</h3>
                            </div>
                            <%} %>
                                <% movies.forEach(movie=> { %>
                                    <div class="col-md-3">
                                        <div class="card movie-card bg-dark text-white">
                                            <div class="card-img">
                                                <img src="<%= movie.movie_image %>">
                                            </div>
                                            <div class="card-body">
                                                <h6 class="card-title">
                                                    <%= movie.movie_type%>
                                                </h6>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                </div>
            </div>
        </section>
    </main>

    <!-- FOOTER -->
    <footer class="text-center py-4">
        <p class="mb-0 text-secondary">Â© 2025 MovieHub | All Rights Reserved</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>