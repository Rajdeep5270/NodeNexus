                    <input class="form-control" type="text" name="movie_lang" placeholder="Language" required>
                    <input class="form-control" type="text" name="movie_type" placeholder="Movie Type" required>

                    <textarea class="form-control" name="movie_desc" placeholder="Description" rows="3"
                        required></textarea>

                    <input class="form-control" type="text" name="movie_director" placeholder="Director" required>

                    <input class="form-control" type="text" name="movie_writer" placeholder="Writer" required>

                    <input class="form-control" type="text" name="movie_stars" placeholder="Stars" required>

                    <button type="submit" class="btn btn-danger mt-3">Add Movie</button>
                </form>
