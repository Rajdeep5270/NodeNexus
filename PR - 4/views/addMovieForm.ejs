    <!-- ADD MOVIE FORM -->
    <section class="addMovie">
        <div class="container">
            <div class="add-movie-card text-white">
                <h3 class="mb-4 text-center">Add New Movie</h3>
                <form action="/addMovie" method="POST">
                    <input class="form-control" type="text" name="movie_name" placeholder="Movie Name" required>

