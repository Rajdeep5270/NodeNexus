        }

        .comment-content p {
            font-size: 13px;
            color: var(--gray);
            margin-bottom: 8px;
            line-height: 1.5;
        }

        .comment-meta {
            display: flex;
            font-size: 12px;
            color: var(--gray);
        }

        .comment-post {
            margin-right: 15px;
        }

        /* Mobile Responsive */
        @media (max-width: 1100px) {
            .content-area {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .sidebar {
                width: 70px;
                padding: 20px 0;
            }
            
