<%- include('../header') %>

<div class="dashboard-container container">

    <!-- Page Header -->
    <div class="dashboard-hero text-center mb-5">
        <h1 class="fw-bold">Edit Gujarati Dish</h1>
        <p class="text-muted max-width-600 mx-auto">
            Update details for your Gujarati dishes like Dhokla, Thepla, Khandvi & more.
        </p>
    </div>

    <!-- Edit Dish Card -->
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="category-card bg-white p-4">

                <!-- Icon -->
                <div class="category-icon">
                    <i class="fa-solid fa-bowl-food text-warning fs-3"></i>
                </div>

                <!-- Form UI -->
                <form method="post" action="#">

                    <!-- Dish Name -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Dish Name</label>
                        <input type="text" class="form-control" value="Dhokla">
                    </div>

                    <!-- Price -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Price (â‚¹)</label>
                        <input type="number" class="form-control" value="120">
                    </div>

                    <!-- Dish Image -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Dish Image</label>
                        <input type="file" class="form-control">
                        <small class="text-muted">Current: dhokla.jpg</small>
                    </div>

                    <!-- Description -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">Description</label>
                        <textarea class="form-control" rows="3">Soft and spongy steamed cake, lightly tangy.</textarea>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex gap-3 justify-content-center">
                        <button type="button" class="btn btn-outline-secondary px-4">
                            Cancel
                        </button>
                        <button type="button" class="btn btn-warning px-5 text-white">
                            <i class="fa-solid fa-pen me-2"></i> Update Dish
                        </button>
                    </div>

                </form>

            </div>

        </div>
    </div>

</div>

<%- include('../footer') %>
