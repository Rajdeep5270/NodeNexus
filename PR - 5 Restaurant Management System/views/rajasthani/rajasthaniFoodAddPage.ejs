<%- include("../header") %>

    <div class="dashboard-container">
        <div class="container">

            <div class="dashboard-hero text-center mb-5">
                <h1 class="fw-bold">Add Rajasthani Dish</h1>
                <p class="text-muted max-width-600 mx-auto">
                    Add traditional Rajasthani dishes like Dal Baati Churma, Gatte ki Sabzi, Ker Sangri & more.
                </p>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8">

                    <div class="category-card bg-white p-4">

                        <div class="category-icon">
                            <i class="fa-solid fa-bowl-food text-danger fs-3"></i>
                        </div>

                        <form method="post" action="/addRajasthaniDishPage/addRajasthaniDish"
                            enctype="multipart/form-data">

                            <!-- Dish Name  -->
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Dish Name</label>
                                <input type="text" class="form-control" name="dish_name"
                                    placeholder="e.g. Dal Baati Churma">
                            </div>

                            <!-- Dish Flavour  -->
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Flavour Type</label>
                                <select class="form-select" name="dish_flavour" required>

                                    <option value="" selected disabled>Select dish flavour</option>

                                    <% ["Spicy", "Sweet" , "Salty" ].forEach(flavour=> { %>
                                        <option value="<%= flavour %>">
                                            <%= flavour %>
                                        </option>
                                        <% }) %>

                                </select>
                            </div>

                            <!-- Dish Price  -->
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Price (â‚¹)</label>
                                <input type="number" class="form-control" name="dish_price" placeholder="e.g. 180">
                            </div>

                            <!-- Dish Image  -->
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Dish Image</label>
                                <input type="file" name="dish_image" class="form-control">
                            </div>

                            <!-- Dish Description -->
                            <div class="mb-4">
                                <label class="form-label fw-semibold">Description</label>
                                <textarea class="form-control" rows="3"
                                    placeholder="Short description about the Rajasthani dish"
                                    name="dish_desc"></textarea>
                            </div>

                            <!-- Action Buttons  -->
                            <div class="d-flex gap-3 justify-content-center">
                                <a href="/">
                                    <button type="button" class="btn btn-outline-secondary px-4">Cancel</button>
                                </a>
                                <button type="submit" class="btn btn-danger px-5 text-white">
                                    <i class="fa-solid fa-plus me-2"></i>Add Dish
                                </button>
                            </div>
                        </form>

                    </div>

                </div>
            </div>

        </div>
    </div>

    <%- include("../footer") %>