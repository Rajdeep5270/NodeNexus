<%- include("../header") %>

<div class="dashboard-container">
    <div class="container">

        <div class="dashboard-hero text-center mb-5">
            <h1 class="fw-bold">Add Rajasthani Dish</h1>
            <p class="text-muted max-width-600 mx-auto">
                Add traditional Rajasthani dishes like Dal Baati Churma, Gatte ki Sabzi, Ker Sangri & more.
            </p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">

                <div class="category-card bg-white p-4">

                    <div class="category-icon">
                        <i class="fa-solid fa-bowl-food text-danger fs-3"></i>
                    </div>

                    <form>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Dish Name</label>
                            <input type="text" class="form-control" placeholder="e.g. Dal Baati Churma">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Price (â‚¹)</label>
                            <input type="number" class="form-control" placeholder="e.g. 180">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Dish Image</label>
                            <input type="file" class="form-control">
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">Description</label>
                            <textarea class="form-control" rows="3"
                                placeholder="Short description about the Rajasthani dish"></textarea>
                        </div>

                        <div class="d-flex gap-3 justify-content-center">
                            <a href="/">
                                <button type="button" class="btn btn-outline-secondary px-4">Cancel</button>
                            </a>
                            <button type="button" class="btn btn-danger px-5 text-white">
                                <i class="fa-solid fa-plus me-2"></i>Add Dish
                            </button>
                        </div>
                    </form>

                </div>

            </div>
        </div>

    </div>
</div>

<%- include("../footer") %>
