<%- include('../header') %>

<div class="dashboard-container container">

    <!-- Page Header -->
    <div class="dashboard-hero text-center mb-5">
        <h1 class="fw-bold">Edit Rajasthani Dish</h1>
        <p class="text-muted max-width-600 mx-auto">
            Update your Rajasthani dishes like Dal Baati, Gatte Ki Sabzi, Ker Sangri & more.
        </p>
    </div>

    <!-- Edit Dish Card -->
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="category-card bg-white p-4">

                <!-- Icon -->
                <div class="category-icon">
                    <i class="fa-solid fa-bowl-food text-danger fs-3"></i>
                </div>

                <!-- Form UI -->
                <form>

                    <!-- Dish Name -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Dish Name</label>
                        <input type="text" class="form-control" value="Dal Baati Churma">
                    </div>

                    <!-- Price -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Price (â‚¹)</label>
                        <input type="number" class="form-control" value="220">
                    </div>

                    <!-- Dish Image -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Dish Image</label>
                        <input type="file" class="form-control">
                        <small class="text-muted">Current: dalbaati.jpg</small>
                    </div>

                    <!-- Description -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">Description</label>
                        <textarea class="form-control" rows="3">Classic Rajasthani platter with baked baati, spicy dal and sweet churma.</textarea>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex gap-3 justify-content-center">
                        <button type="button" class="btn btn-outline-secondary px-4">
                            Cancel
                        </button>
                        <button type="button" class="btn btn-danger px-5 text-white">
                            <i class="fa-solid fa-pen me-2"></i> Update Dish
                        </button>
                    </div>

                </form>

            </div>

        </div>
    </div>

</div>

<%- include('../footer') %>
