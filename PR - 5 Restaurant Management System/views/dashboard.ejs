<%- include('header')%>

    <div class="dashboard-container container-fluid">
        <!-- Hero Section -->
        <section class="hero-section py-5">
            <div class="dashboard-hero text-center mb-5">
                <h1 class="display-5 fw-bold text-primary mb-3">Explore Our Cuisines</h1>
                <p class="lead text-muted max-width-600 mx-auto">Discover delicious dishes from various culinary
                    traditions,
                    each prepared with authentic flavors and fresh ingredients.</p>
            </div>
        </section>

        <!-- Food Categories Grid -->
        <section class="food-categories">
            <div class="container">
                <div class="row g-4 justify-content-center">

                    <!-- Gujarati Cuisine -->
                    <div class="col-lg-4 col-md-6">
                        <a href="/addGujratiDishPage/gujratiFoodViewPage" class="foodOriginCard">
                            <div class="card category-card shadow-lg border-0">
                                <div class="category-img-container">
                                    <img src="https://images.unsplash.com/photo-1565557623262-b51c2513a641?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=80"
                                        class="card-img-top" alt="Gujarati Food">
                                    <div class="category-overlay">
                                        <span class="badge bg-warning text-dark">Vegetarian</span>
                                    </div>
                                </div>
                                <div class="card-body text-center p-4">
                                    <div class="category-icon mb-3">
                                        <i class="fas fa-leaf fa-2x text-success"></i>
                                    </div>
                                    <h3 class="card-title fw-bold text-primary">Gujarati</h3>
                                    <p class="card-text text-muted">Sweet and savory vegetarian dishes from Western
                                        India,
                                        known for
                                        their balance of flavors.</p>
                                    <div class="dish-count mb-3">
                                        <span class="badge bg-light text-dark">5+ Dishes</span>
                                    </div>
                                    <div class="card-footer bg-transparent border-0 pb-3">
                                        <small class="text-muted"><i class="fas fa-star text-warning"></i> Most Popular:
                                            Dhokla,
                                            Thepla</small>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>

                    <!-- Rajasthani Cuisine -->
                    <div class="col-lg-4 col-md-6">
                        <a href="/addRajasthaniDishPage/rajasthaniFoodViewPage" class="foodOriginCard">
                            <div class="card category-card shadow-lg border-0">
                                <div class="category-img-container">
                                    <img src="https://images.unsplash.com/photo-1565299624946-b28f40a0ae38?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=80"
                                        class="card-img-top" alt="Rajasthani Food">
                                    <div class="category-overlay">
                                        <span class="badge bg-danger">Spicy</span>
                                    </div>
                                </div>
                                <div class="card-body text-center p-4">
                                    <div class="category-icon mb-3">
                                        <i class="fas fa-pepper-hot fa-2x text-danger"></i>
                                    </div>
                                    <h3 class="card-title fw-bold text-primary">Rajasthani</h3>
                                    <p class="card-text text-muted">Rich, flavorful dishes from the desert region, often
                                        spicy and
                                        made with minimal water.</p>
                                    <div class="dish-count mb-3">
                                        <span class="badge bg-light text-dark">5+ Dishes</span>
                                    </div>
                                    <div class="card-footer bg-transparent border-0 pb-3">
                                        <small class="text-muted"><i class="fas fa-star text-warning"></i> Most Popular:
                                            Dal
                                            Baati,
                                            Gatte Ki Sabzi</small>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>

                    <!-- South Indian Cuisine -->
                    <div class="col-lg-4 col-md-6">
                        <a href="/addSouthIndianDishPage/southIndianFoodViewPage" class="foodOriginCard">
                            <div class="card category-card  shadow-lg border-0">
                                <div class="category-img-container">
                                    <img src="https://images.unsplash.com/photo-1565299507177-b0ac66763828?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=80"
                                        class="card-img-top" alt="South Indian Food">
                                    <div class="category-overlay">
                                        <span class="badge bg-success">Fresh</span>
                                    </div>
                                </div>
                                <div class="card-body text-center p-4">
                                    <div class="category-icon mb-3">
                                        <i class="fas fa-seedling fa-2x text-success"></i>
                                    </div>
                                    <h3 class="card-title fw-bold text-primary">South Indian</h3>
                                    <p class="card-text text-muted">Rice-based dishes with aromatic spices, coconut, and
                                        fresh
                                        ingredients from Southern India.</p>
                                    <div class="dish-count mb-3">
                                        <span class="badge bg-light text-dark">5+ Dishes</span>
                                    </div>
                                    <div class="card-footer bg-transparent border-0 pb-3">
                                        <small class="text-muted"><i class="fas fa-star text-warning"></i> Most Popular:
                                            Dosa,
                                            Idli,
                                            Vada</small>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>

                </div>
            </div>
        </section>

        <!-- Stats Section -->
        <div class="container-fluid">
            <div class="row mt-5 pt-4">
                <div class="col-12">
                    <div class="stats-container p-4 rounded-3 shadow-sm bg-light">
                        <h4 class="text-center mb-4 fw-bold">Our Culinary Stats</h4>
                        <div class="row text-center">
                            <div class="col-md-3 col-6 mb-3">
                                <div class="stat-item">
                                    <h2 class="display-6 fw-bold text-primary">3</h2>
                                    <p class="text-muted">Cuisine Types</p>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 mb-3">
                                <div class="stat-item">
                                    <h2 class="display-6 fw-bold text-primary">20+</h2>
                                    <p class="text-muted">Total Dishes</p>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 mb-3">
                                <div class="stat-item">
                                    <h2 class="display-6 fw-bold text-primary">100%</h2>
                                    <p class="text-muted">Fresh Ingredients</p>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 mb-3">
                                <div class="stat-item">
                                    <h2 class="display-6 fw-bold text-primary">30 min</h2>
                                    <p class="text-muted">Avg. Prep Time</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>


    <%- include('footer')%>