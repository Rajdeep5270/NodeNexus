<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Restaurant Management</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Google Fonts -->
    <link
        href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&family=Playfair+Display:wght@700&display=swap"
        rel="stylesheet">

    <link rel="stylesheet" href="../public/dashboard.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg custom-navbar">
        <div class="container-fluid px-4">

            <!-- Brand Logo -->
            <a class="navbar-brand" href="/">
                <i class="fas fa-utensils"></i>
                <span class="brand-text">GourmetHub</span>
            </a>

            <!-- Mobile Toggle -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation Menu -->
            <div class="collapse navbar-collapse py-4" id="navMenu">
                <ul class="navbar-nav ms-auto align-items-center nav-menu">

                    <!-- Dashboard Link -->
                    <li class="nav-item">
                        <a class="nav-link <%= (typeof page !== 'undefined' && page === 'dashboard') ? 'active' : '' %>"
                            href="/">
                            <i class="fas fa-chart-line"></i> Dashboard
                            <span class="nav-stats-badge">Today</span>
                        </a>
                    </li>

                    <!-- Menu Link -->
                    <li class="nav-item">
                        <a class="nav-link <%= (typeof page !== 'undefined' && page === 'menu') ? 'active' : '' %>"
                            href="#">
                            <i class="fas fa-utensils"></i> Menu
                            <span class="notification-dot"></span>
                        </a>
                    </li>

                    <!-- Categories Link -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle <%= (typeof page !== 'undefined' && page === 'categories') ? 'active' : '' %>"
                            href="#" id="categoriesDropdown" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            <i class="fas fa-layer-group"></i> Add Dishes
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="categoriesDropdown">
                            <li><a class="dropdown-item" href="/addGujratiDishPage">Gujarati</a></li>
                            <li><a class="dropdown-item" href="/addRajasthaniDishPage">Rajasthani</a></li>
                            <li><a class="dropdown-item" href="/addSouthIndianDishPage">South Indian</a></li>
                        </ul>
                    </li>

                    <!-- Orders Link -->
                    <li class="nav-item">
                        <a class="nav-link <%= (typeof page !== 'undefined' && page === 'orders') ? 'active' : '' %>"
                            href="#">
                            <i class="fas fa-shopping-bag"></i> Orders
                            <span class="nav-stats-badge">5 New</span>
                        </a>
                    </li>

                    <!-- User Profile -->
                    <div class="nav-user dropdown">
                        <div class="user-avatar" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user"></i>
                        </div>
                        <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 mt-3"
                            aria-labelledby="userDropdown">
                            <li class="px-4 py-3">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="user-avatar">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">Admin</h6>
                                        <small class="text-muted">admin@gourmethub.com</small>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="/profile"><i class="fas fa-user-circle me-2"></i>
                                    Profile</a></li>
                            <li><a class="dropdown-item" href="/settings"><i class="fas fa-cog me-2"></i> Settings</a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item text-danger" href="/logout"><i
                                        class="fas fa-sign-out-alt me-2"></i> Logout</a></li>
                        </ul>
                    </div>

                </ul>
            </div>
        </div>
    </nav>