<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Book Form</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

    <div class="vh-100 d-flex align-items-center justify-content-center">
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <div class="card shadow">
                        <div class="card-header bg-dark text-white text-center">
                            <h4>Update Book</h4>
                        </div>

                        <div class="card-body">
                            <form method="post" action="/updateBook" enctype="multipart/form-data">
                                <!-- id  -->
                                <div class="mb-3">
                                    <input type="hidden" class="form-control" name="book_id" value="<%= findBook.id %>">
                                </div>
                                <!-- Book Name -->
                                <div class="mb-3">
                                    <label class="form-label">Book Name</label>
                                    <input type="text" class="form-control" name="book_name"
                                        value="<%= findBook.book_name %>">
                                </div>

                                <!-- Author Name -->
                                <div class="mb-3">
                                    <label class="form-label">Author Name</label>
                                    <input type="text" class="form-control" name="book_author"
                                        value="<%= findBook.book_author %>">
                                </div>

                                <!-- Price -->
                                <div class="mb-3">
                                    <label class="form-label">Price</label>
                                    <input type="number" class="form-control" name="book_price"
                                        value="<%= findBook.book_price %>">
                                </div>

                                <!-- Language -->
                                <div class="mb-3">
                                    <label class="form-label">Language</label>
                                    <input type="text" class="form-control" name="book_lang"
                                        value="<%= findBook.book_lang %>">
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <img src="../<%= findBook.book_image %>" alt="<%= findBook.book_name%>" width="100">
                                    <br>
                                    <label class="form-label">Book Image</label>
                                    <input type="file" class="form-control" name="book_image"
                                        value="<%= findBook.book_image%>">
                                    </select>
                                </div>

                                <!-- Button -->
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-warning">
                                        Update Book
                                    </button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>