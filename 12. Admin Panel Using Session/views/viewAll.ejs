<%- include('header') %>
    <div class="main-content">
        <div class="admin-view">
            <div class="content-header-flex">
                <div>
                    <h1>Admin Directory</h1>
                    <p>Manage all registered administrators</p>
                </div>
            </div>

            <div class="admin-table-wrapper">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th width="50">ID</th>
                            <th>Admin Name</th>
                            <th>Contact Details</th>
                            <th>Location</th>
                            <th>Hobbies</th>
                            <% if(findAdmin.email==="rajdeepex5270@gmail.com" ) { %>
                                <th class="text-right">Actions</th>
                                <% } %>
                        </tr>
                    </thead>
                    <tbody>
                        <% allAdminData.map((admin, index)=> { %>
                            <tr>
                                <td>
                                    <% if(admin.email==="rajdeepex5270@gmail.com" ) { %>
                                        <span class="badge-id" style="background-color: gold;">â™•</span>
                                        <% } else { %>
                                            <span class="badge-id">#<%= index + 1 %></span>
                                            <%}%>
                                </td>
                                <td>
                                    <div class="admin-profile-cell">
                                        <img src="<%= admin.profileImage %>" class="mini-avatar" alt="Admin">
                                        <div class="admin-name-info">
                                            <strong>
                                                <%= admin.firstName %>
                                                    <%= admin.lastName %>
                                            </strong>
                                            <small>
                                                <%= admin.gender %>
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="contact-stack">
                                        <span><i class="fas fa-envelope"></i>
                                            <%= admin.email %>
                                        </span>
                                        <span><i class="fas fa-phone"></i>
                                            <%= admin.phone %>
                                        </span>
                                    </div>
                                </td>
                                <td><span class="text-muted"><i class="fas fa-city"></i>
                                        <%= admin.city %>
                                    </span></td>
                                <td><span class="text-muted"><i class="fas fa-heart"></i>
                                        <%= admin.hobbies %>
                                    </span></td>
                                <% if(findAdmin.email==="rajdeepex5270@gmail.com" ) { %>
                                    <td class="text-right">
                                        <div class="action-buttons-compact">
                                            <a href="/editAdmin/<%= admin.id %>" class="btn-icon edit" title="Edit">
                                                <i class="fas fa-pen"></i>
                                            </a>
                                            <a href="/deleteAdmin/<%= admin.id %>" class="btn-icon delete"
                                                title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                    <% } %>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%- include('footer') %>